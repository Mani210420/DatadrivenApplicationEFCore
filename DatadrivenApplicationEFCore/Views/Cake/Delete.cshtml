@model Cake

<h2>Delete pie @Model?.Name</h2>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="CakeId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.CakeId
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ShortDescription"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.ShortDescription
        </dd>

    </dl>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="CakeId" />
    <input type="submit" value="Delete Cake" class="btn btn-danger" onclick="javascript: return confirm('Are you sure you want to delete this Cake?');" />
</form>

<div>
    <a asp-controller="Cake" asp-action="Index">Back to overview</a>
</div>

