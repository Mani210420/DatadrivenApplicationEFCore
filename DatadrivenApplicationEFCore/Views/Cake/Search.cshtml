@model CakeSearchViewModel

<h2>Search Cakes</h2>
<hr />

<form asp-controller="Cake" asp-action="Search" method="get">
    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="SearchCategory" asp-items="Model.Categories" class="form-control">
            <option value="">All</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Search value</label>
        <input type="text" asp-for="SearchQuery" class="form-control" />
    </div>
    <input type="submit" value="Filter" class="btn btn-primary" />
</form>

@if (!Model.Cakes.Any())
{
    <p>No results</p>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>

            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>Actions</th>
        </tr>
        @foreach (var cake in Model.Cakes)
        {

            <tr>
                <td>@cake.CakeId</td>
                <td>@cake.Name</td>
                <td>@cake.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cake.CakeId">Details</a>
                    <a asp-action="Edit" asp-route-id="@cake.CakeId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@cake.CakeId">Delete</a>
                </td>
            </tr>
        }
    </table>
}
